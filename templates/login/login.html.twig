{% extends 'base.html.twig' %}

{% block title %}Connexion Ã  l'application{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <h1 class="text-center mb-4">Bienvenue sur notre application</h1>
            
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            <div class="card">
                <div class="card-body">
                    <h2 class="card-title text-center">Veuillez vous connecter</h2>
                    <form method="post" action="{{ path('app_login') }}">
                        <div class="form-group">
                            <label for="inputEmail">Email</label>
                            <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
                        </div>
                        <div class="form-group">
                            <label for="inputPassword">Mot de passe</label>
                            <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
                        </div>
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                        <button class="btn btn-lg btn-primary btn-block mt-3" type="submit">Se connecter</button>
                    </form>
                </div>
            </div>
            
            <div class="text-center mt-3">
                <p>Vous n'avez pas de compte ? <a href="{{ path('app_register') }}">Inscrivez-vous ici</a></p>
            </div>
        </div>
    </div>
</div>
{% endblock %}